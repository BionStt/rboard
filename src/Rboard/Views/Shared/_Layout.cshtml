@{ 
    IEnumerable<Report> reports = ViewData["Reports"] as IEnumerable<Report>;

    Dictionary<string, Report[]> reportCategories = reports
        .GroupBy(r => r.Category)
        .ToDictionary(g => g.Key, g => g.ToArray());

    bool release = true;
    bool? debug = ViewData["Debug"] as bool?;

#if DEBUG
    release = false;
#endif
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

        <title>@ViewData["Title"] - Rboard</title>

        <script src="libraries/jquery-1.11.3/jquery.min.js"></script>
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link href="libraries/bootstrap-3.3.5/css/cosmo.min.css" rel="stylesheet" />
        <script src="libraries/bootstrap-3.3.5/js/bootstrap.min.js"></script>
        <script src="libraries/bootstrap-3.3.5/shim/html5shiv.min.js"></script>
        <script src="libraries/bootstrap-3.3.5/shim/respond.min.js"></script>
        <script src="libraries/stickytableheaders-0.1.19/jquery.stickytableheaders.min.js"></script>
        <link href="libraries/font-awesome-4.5.0/css/font-awesome.min.css" rel="stylesheet" />
        <script src="libraries/htmlwidgets-0.8/htmlwidgets.js"></script>
        <script src="libraries/underscore-1.8.3/underscore-min.js"></script>
        <link href="libraries/highcharts-4.2.4/css/motion.css" rel="stylesheet" />
        <script src="libraries/highcharts-4.2.4/highstock.js"></script>
        <script src="libraries/highcharts-4.2.4/highcharts-more.js"></script>
        <script src="libraries/highcharts-4.2.4/highcharts-3d.js"></script>
        <script src="libraries/highcharts-4.2.4/modules/exporting.js"></script>
        <script src="libraries/highcharts-4.2.4/modules/drilldown.js"></script>
        <script src="libraries/highcharts-4.2.4/modules/data.js"></script>
        <script src="libraries/highcharts-4.2.4/modules/heatmap.js"></script>
        <script src="libraries/highcharts-4.2.4/modules/map.js"></script>
        <script src="libraries/highcharts-4.2.4/modules/treemap.js"></script>
        <script src="libraries/highcharts-4.2.4/modules/funnel.js"></script>
        <script src="libraries/highcharts-4.2.4/modules/solid-gauge.js"></script>
        <script src="libraries/highcharts-4.2.4/modules/reset.js"></script>
        <script src="libraries/highcharts-4.2.4/plugins/annotations.js"></script>
        <script src="libraries/highcharts-4.2.4/plugins/motion.js"></script>
        <script src="libraries/highcharts-4.2.4/plugins/draggable-points.js"></script>
        <script src="libraries/highcharts-4.2.4/plugins/pattern-fill-v2.js"></script>
        <script src="libraries/highcharts-4.2.4/plugins/text-symbols.js"></script>
        <script src="libraries/highcharts-4.2.4/plugins/symbols-extra.js"></script>
        <link href="libraries/fontawesome-4.5.0/font-awesome.min.css" rel="stylesheet" />
        <link href="libraries/htmlwdgtgrid-1/htmlwdgtgrid.css" rel="stylesheet" />
        <script src="libraries/highchart-binding-0.4.0/highchart.js"></script>

        <link rel="stylesheet" href="/libraries/flex.css" type="text/css" />

    </head>
    <body>

        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">

                    <button id="navbar-button" type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>

                    <span class="navbar-logo pull-left">

                    </span>
                    <span class="navbar-brand">
                        Rboard
                        @if (debug == true)
                        {
                            WriteLiteral(" (Debug)");
                        }
                        <span class="navbar-author">
                        </span>
                    </span>

                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav navbar-left">
                        @foreach (var category in reportCategories)
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@category.Key <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    @foreach (Report report in category.Value)
                                    {
                                        if (debug == true)
                                        {
                                            <li><a asp-controller="Reports" asp-action="Show" asp-route-category="@category.Key.ToLower()" asp-route-name="@report.Url" asp-route-debug="true">@report.Name</a></li>
                                        }
                                        else
                                        {
                                            <li><a asp-controller="Reports" asp-action="Show" asp-route-category="@category.Key.ToLower()" asp-route-name="@report.Url">@report.Name</a></li>
                                        }
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @if (!release)
                        {
                            if (debug == true)
                            {
                                <li><a href="?"><i style="font-size: 18px" class="fa fa-bug"></i></a></li>
                            }
                            else
                            {
                                <li><a href="?debug=true"><i style="font-size: 18px" class="fa fa-bug"></i></a></li>
                            }
                        }
                        @if (debug == true)
                        {
                            <li><a href="?debug=true"><i style="font-size: 18px" class="fa fa-refresh"></i></a></li>
                        }
                        else
                        {
                            <li><a href="?force=true"><i style="font-size: 18px" class="fa fa-refresh"></i></a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    
        <div id="report-container">
            @RenderBody()
        </div>
    </body>
</html>